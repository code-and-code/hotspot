{% extends view('admin.admin') %}

{% block content %}


    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="/admin/client"> Comentário </a> | Senha
        </div>
        <div class="panel-body">

            <form method="post" action="/admin/personal_password/reset?id={{ id }}&client_id={{ client_id }}" class="form-horizontal">

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Comentário</label>
                    <div class="col-sm-6">
                        <textarea name="comment" class="form-control" required></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-btn fa-check"></i>Salvar</button>
                    </div>
                </div>

            </form>
        </div>
    </div>

    <a href="javascript:history.go(-1)" type="submit" class="btn btn-success"> Voltar </a>

{% endblock %}