{% extends view('admin.admin') %}

{% block content %}

    <div class="panel panel-default">
        <div class="panel-heading">
            Usuários  <a href="/admin/user/create" title="Novo Usuário" ><i class="pull-right glyphicon glyphicon-plus"></i></a>
        </div>
        <div class="panel-body">

            <table class="table table-hover">
                <thead>
                <th>Nome</th>
                <th>Email</th>
                <th>#</th>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href='/admin/user/edit?id={{ user.id }}' title='Editar'><i class= 'glyphicon glyphicon-edit'></i></a>
                            <a href='/admin/user/delete?id={{ user.id }}' title='Exclir' style="color:red"><i class= 'glyphicon glyphicon-trash'></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <a href="/admin" class="btn btn-success"> Voltar </a>

{% endblock %}