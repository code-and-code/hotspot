{% extends view('admin.admin') %}

{% block content %}

    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="/admin/user"> Usu√°rios </a> | Editar
        </div>
        <div class="panel-body">

            <form method="post" action="/admin/user/update?id={{ user.id }}" class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Nome</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="name" value="{{ user.name }}"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-6">
                        <input type="email" class="form-control" name="email" value="{{ user.email }}"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Senha</label>
                    <div class="col-sm-6">
                        <input type="password" class="form-control" name="password" value="{{ user.password }}"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-btn fa-check"></i>Salvar</button>
                    </div>
                </div>

            </form>
        </div>
    </div>

    <a href="/admin/user" class="btn btn-success"> Voltar </a>

