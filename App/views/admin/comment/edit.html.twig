{% extends view('admin.admin') %}

{% block content %}


    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="/admin/contact/show?id={{ comment.contact_id }}"> Comentario </a> | Editar
        </div>
        <div class="panel-body">

            <form method="post" action="/admin/comment/update" class="form-horizontal">
                <input type="hidden" name="id" value="{{ comment.id }}"/>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Titulo</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="title" value="{{ comment.title }}"/>

                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Comentario</label>
                    <div class="col-sm-6">
                        <textarea name="content" class="form-control">{{ comment.content }}</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-btn fa-check"></i>Salvar</button>
                    </div>
                </div>

            </form>
        </div>
    </div>

    <a href="/admin/contact/show?id={{ comment.contact_id }}" class="btn btn-success"> Voltar </a>
    <!-- Fazer java script pra voltar a div bootstrap de comunicação -->

{% endblock %}