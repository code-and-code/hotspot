{% extends view('admin.admin') %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Caches
                    </div>
                    <div class="panel-body">

                        <table class="table table-hover">
                            <thead>
                            <th>Id</th>
                            <th>Nome</th>
                            <th>#</th>
                            </thead>
                            <tbody>
                            {% for cache in caches %}
                                <tr>
                                    <td>{{ cache.id }}</td>
                                    <td>{{ cache.cache  }}</td>
                                    <td>
                                        <a href='/admin/cache/show?key={{ cache.cache }}' title=''><i class= 'glyphicon glyphicon-open-file'></i></a>
                                        <a href='/admin/cache/delete?key={{ cache.cache }}' title=''><i class= 'glyphicon glyphicon-trash'></i></a>

                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}