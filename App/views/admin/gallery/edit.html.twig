{% extends view('admin.admin') %}

{% block content %}


    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="/admin/gallery/index"> Galeria </a> | Editar
        </div>
        <div class="panel-body">

            <form method="post" action="/admin/gallery/update?id={{ gallery.id }}" class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Nome</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="name" value="{{ gallery.name }}"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default"><i class="fa fa-btn fa-check"></i>Salvar</button>
                    </div>
                </div>

            </form>
        </div>
    </div>


{% endblock %}