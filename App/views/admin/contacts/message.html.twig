{% extends view('admin.admin') %}

{% block content %}

    <div class="panel panel-default">
        <div class="panel-heading">
            Contato
        </div>
        <div class="panel-body">

            <table class="table table-hover">
                <thead>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Tel</th>
                <th>Area de atuação</th>
                </thead>
                <tbody>
                <tr>
                    <td>{{ contact.name }}</td>
                    <td>{{ contact.email }}</td>
                    <td>{{ contact.phone }}</td>

                    {% if contact.acting == null %}
                        <td class="danger">Em Branco</td>
                    {% else %}
                        <td>{{ contact.acting }}</td>
                    {% endif %}

                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="panel panel-success">
        <div class="panel-heading">
            Mensagem :
        </div>
        <div class="panel-body">
            <table class="table table-hover">
                {{ contact.message }}
            </table>
        </div>
    </div>

    <a href="/admin/contact" class="btn btn-success"> Voltar </a>


{% endblock %}