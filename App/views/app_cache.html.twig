    <meta name="keywords"    content="Coworking Curitiba, hotspot, Escritório Compartilhado, Sala para Reuniões, Sala Privativa, Escritório Comercial, Video conferência">
    <meta name="author"      content="http://www.codeandcode.com.br/">
    <meta name="robots"      content="index,nofolow">
    <meta name="googlebot"   content="index,nofolow">
    <meta name="google-site-verification" content="oNJiJa6HGMLEMKA6RpXX7oU24MbCE8dR2tnX4uP_YrE" />

    <!-- Social Meta Facebook -->
    <meta property="oq:image" content="http://www.hotspotcwk.com.br/assets/site/images/banner_logo.jpg">
    <meta property="oq:image:type" content="image/jpeg">


    <title>Hotspot Coworking Curitiba</title>

    <link href="../../assets/site/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <link href="../../assets/site/css/style.min.css" rel="stylesheet" type="text/css" media="all" />
    <script src="../../assets/site/js/jquery.min.js"></script>
    <link rel="icon" href="../../../assets/site/images/miniLogo.png">
